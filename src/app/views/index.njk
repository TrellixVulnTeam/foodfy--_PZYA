{% extends "layout.njk" %}
{% block header %}
     <div class="search">
        <form action="/search-recipe" method="GET">
                <input type="text" name="filter"
                    placeholder="Search a recipe"
                    value="{{   filter  }}">
                <button type="submit">Search</button>
        </form>
    </div>
     <div class="pagination"
      data-page={{pagination.page}}
      data-total={{pagination.total}}
      data-filter={{filter}}
      >
    </div>
{% endblock %}

{% block content %}

    <div class="banner">
        <div class="banner-title">
        <h1>The best recipes</h1>
        <p>Learn how to build the best dishes with recipes created
            by professionals from around the world.
        </p>
    </div>
        <img src="assets/chef.png" alt="Image chef">
    </div>

    <div class="top-view-recipes">
        <h1>Most Viewed</h1>
       <div class="cards">
            {% for recipe in recipes %}
                    <div class="card item">
                    <a href="/recipe/{{recipe.id}}">
                            <div class="image__card">
                                <img src="{{recipe.image}}" 
                                    alt="Imagem de {{recipe.title}}">
                            </div>
                            <div class="title__card">
                                <h4>{{recipe.title}}</h4>
                            </div>
                            <div class="author__recipe">
                                <p>{{recipe.author}}</p>
                            </div>
                        </a>
                    </div>
           {%  endfor %}
        </div>
</div>


{% endblock %}



