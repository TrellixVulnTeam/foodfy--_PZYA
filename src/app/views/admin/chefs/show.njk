{% extends "../layout.njk" %}

{% block head %} <title> Admin | Details Chef</title> {% endblock %}

{% block content %}

    <div class="content">
                <div class="header__page">
                    <h4>Chef: {{chef.name}}</h4>
                      <a class="button" href="/admin/chefs/{{chef.id}}/edit"> Edit chef</a>
                </div>
                <div class="image__chef">
                    <img src="{{chef.avatar_url}}" alt="Imagem de" />
                    <h4>{{chef.name}}</h4>
                    <p>{{chef.total_recipes}} recipes</p>
                </div>

                <div class="header__page">
                    <h4>Recipes</h4>
                </div>
             <div class="cards">
                {% for recipe in recipes %}
                    <a class="card" href="/admin/recipes/{{recipe.id}}">
                        <div class="image__card">
                                <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                        </div>
                        <div class="details-item">
                                <div class="title__card">
                                    <h4>{{recipe.title}}</h4>
                                </div>
                                <div class="author__recipe">
                                    <p>by {{chef.name}}</p>
                                </div>
                                <button onclick="location.href='/admin/recipes/{{recipe.id}}';"> View</button>
                        </div>
                    </a>
                    
                   
           {%  endfor %}
         </div>
    </div>

{% endblock %} 
 



