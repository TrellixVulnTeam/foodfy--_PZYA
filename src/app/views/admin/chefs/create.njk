{% extends "../layout.njk" %}

{% block head %} <title> Admin | Create Chef</title> {% endblock %}

{% block content %}

    <form class="content" method="POST" action="/admin/chefs/create">
                <div class="header__page">
                    <h4>Creating chef</h4>
                    <div>
                        <button class="button" type="submit">Save chef</button>
                    </div>
                </div>
                <div class="item">
                    <div><p>Name</p></div>
                    <div><input type="text" name="name" />
                    </div>
                </div>
                <div class="item">
                    <div><p>Avatar</p></div>
                    <div>
                        <input type="url" name="avatar_url" 
                            placeholder="http://"
                        />
                    </div>
                </div>
               
       
        </form>
  

{% endblock %} 
 



