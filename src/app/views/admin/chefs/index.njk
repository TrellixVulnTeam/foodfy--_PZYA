{% extends "../layout.njk" %}

{% block head %} <title> Admin | Manage Chefs</title> {% endblock %}

{% block content %}

     <div class="content">
        <div class="header__page">
            <h4>Manage chefs</h4>
        </div>
        <div class="block-chefs">
               
            {% for chef in chefs  %}

                <div class="chef-item" href="/admin/chefs/{{chef.id}}">
                    <div class="image-chef">
                        <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
                    </div>
                    <div class="details-item">
                            <div class="chef-name">
                                <p>{{chef.name}}</p>
                            </div>
                            <a href="/admin/chefs/{{chef.id}}">View</a>
                     </div>
                </div>

           {%  endfor %}
         </div>
    </div>
{% endblock %} 
 



